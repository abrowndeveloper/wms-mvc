@model WMS.UI.Views.ProductModel
@{
    ViewData["Title"] = "Product";
}

<div class="container">
    <h1>@(Model.Product.Id.HasValue ? "Edit Product" : "Create Product")</h1>
    
    <form method="post" asp-action="Product">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Product.Sku" class="form-label">SKU</label>
                    <input asp-for="Product.Sku" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Product.Name" class="form-label">Name</label>
                    <input asp-for="Product.Name" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Product.ManufacturersCode" class="form-label">Manufacturer's Code</label>
                    <input asp-for="Product.ManufacturersCode" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Product.Summary" class="form-label">Summary</label>
                    <textarea asp-for="Product.Summary" class="form-control" rows="3"></textarea>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Product.Weight" class="form-label">Weight</label>
                    <input asp-for="Product.Weight" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Product.CostPrice" class="form-label">Cost Price</label>
                    <input asp-for="Product.CostPrice" class="form-control" type="number" step="0.01" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Product.SellPrice" class="form-label">Sell Price</label>
                    <input asp-for="Product.SellPrice" class="form-control" type="number" step="0.01" />
                </div>
                
                <div class="form-check mb-3">
                    <input asp-for="Product.IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="Product.IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Products" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div> 