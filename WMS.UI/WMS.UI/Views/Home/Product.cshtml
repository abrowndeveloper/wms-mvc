@model WMS.UI.Views.ProductModel
@{
    ViewData["Title"] = "Product";
}

<div class="container">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h1>@(Model.Id.HasValue ? "Edit Product" : "Create Product")</h1>
    
    <form method="post" asp-action="Product">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Sku" class="form-label">SKU</label>
                    <input asp-for="Sku" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="ManufacturersCode" class="form-label">Manufacturer's Code</label>
                    <input asp-for="ManufacturersCode" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Summary" class="form-label">Summary</label>
                    <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Weight" class="form-label">Weight</label>
                    <input asp-for="Weight" class="form-control" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="WeightUnit" class="form-label">Weight Unit</label>
                    <select asp-for="WeightUnit" class="form-control">
                        <option value="KG">KG</option>
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CostPrice" class="form-label">Cost Price</label>
                    <input asp-for="CostPrice" class="form-control" type="number" step="0.01" />
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="SellPrice" class="form-label">Sell Price</label>
                    <input asp-for="SellPrice" class="form-control" type="number" step="0.01" />
                </div>
                
                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Products" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </form>
</div> 